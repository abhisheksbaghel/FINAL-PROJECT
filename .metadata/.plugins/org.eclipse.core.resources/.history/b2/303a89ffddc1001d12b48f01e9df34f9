package com.fitbuddy.Dao;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.fitbuddy.Model.DailyActivityId;
import com.fitbuddy.Model.DailyActivity;

@Repository
public interface DailyActivityDao extends JpaRepository<DailyActivity, DailyActivityId> {

	@Query(value = "SELECT t.id, t.dailyIntake, t.dailyBurn, t.date FROM DailyActivity t GROUP BY t.id: id ORDER BY t.date DESC")
    List<DailyActivity> findTop5ByIdGroupByOrderByDateDesc( @Param(value="id")int id);
}
