package com.fitbuddy.Controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.fitbuddy.Model.DailyActivity;
import com.fitbuddy.Service.DailyActivityServ;

@CrossOrigin(origins = "http://localhost:3000")
@RestController
@RequestMapping("/dailyactivity")
public class DailyActivityCntr {

    @Autowired
    private DailyActivityServ dailyActivityService;

    @GetMapping("/top5/{id}")
    public List<DailyActivity> findTop5ByIdOrderByDateDesc(@PathVariable int id) {
        return dailyActivityService.findTop5ByIdOrderByDateDesc(id);
    }
    
    @PostMapping("/add")
    public void addDaily(DailyActivity da)
    {
    	dailyActivityService.add(da);
    }

}

