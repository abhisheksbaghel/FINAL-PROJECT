package com.fitbuddy.Dao;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.fitbuddy.Model.CompKey;
import com.fitbuddy.Model.DailyActivity;

@Repository
public interface DailyActivityDao extends JpaRepository<DailyActivity, CompKey> {

	@Query("SELECT e FROM DailyActivity e WHERE e.CompKey.id = :CompKey.id  GROUP BY e.CompKey.id ORDER BY e.CompKey.date DESC limit(1,5)")
    List<DailyActivity> findLast5RecordsByCompositeKey(@Param("id") int uid);
	
}
